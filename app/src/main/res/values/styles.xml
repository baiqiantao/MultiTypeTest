<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--____________________________________________Weibo____________________________________________-->
    <style name="Weibo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Weibo.Frame">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="elevation">2dp</item>
        <item name="android:elevation" tools:targetApi="lollipop">2dp</item>
    </style>

    <style name="Weibo.Avatar">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="Weibo.Username">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="Weibo.SubView">
        <item name="android:layout_marginTop">2dp</item>
    </style>

    <style name="Weibo.CreateTime">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#800f</item>
    </style>

    <!--____________________________________________WeiboContent____________________________________________-->
    <style name="WeiboContent"/>

    <style name="WeiboContent.SimpleText">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLength">140</item>
        <item name="android:textColor">#a000</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="WeiboContent.SimpleImage">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
</resources>
